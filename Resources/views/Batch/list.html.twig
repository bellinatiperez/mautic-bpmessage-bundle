{% extends '@MauticCore/Default/content.html.twig' %}

{% block headerTitle %}{{ 'mautic.bpmessage.lot.header.index'|trans }}{% endblock %}

{% block actions %}
    <div class="btn-group">
        <a href="{{ path('mautic_bpmessage_lot_process') }}"
           class="btn btn-primary btn-sm"
           data-toggle="ajax"
           data-method="POST">
            <i class="fa fa-refresh"></i> {{ 'mautic.bpmessage.lot.process.now'|trans }}
        </a>
    </div>
{% endblock %}

{% block content %}
<div class="pa-md">
    <div class="panel-body">
        {% if lots|length == 0 %}
            <div class="alert alert-info">
                <i class="fa fa-info-circle"></i> {{ 'mautic.bpmessage.lot.none'|trans }}
            </div>
        {% else %}
            <div class="table-responsive">
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th class="col-lot-id">{{ 'mautic.core.id'|trans }}</th>
                            <th class="col-lot-name">{{ 'mautic.core.name'|trans }}</th>
                            <th class="col-lot-external-id">{{ 'mautic.bpmessage.lot.external_id'|trans }}</th>
                            <th class="col-lot-campaign">{{ 'mautic.campaign.campaign'|trans }}</th>
                            <th class="col-lot-status">{{ 'mautic.core.status'|trans }}</th>
                            <th class="col-lot-messages">{{ 'mautic.bpmessage.messages'|trans }}</th>
                            <th class="col-lot-created">{{ 'mautic.core.date.added'|trans }}</th>
                            <th class="col-lot-actions">{{ 'mautic.core.actions'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for lot in lots %}
                            {% set stats = lotStats[lot.id] %}
                            <tr>
                                <td>
                                    <a href="{{ path('mautic_bpmessage_lot_view', {'id': lot.id}) }}" data-toggle="ajax">
                                        #{{ lot.id }}
                                    </a>
                                </td>
                                <td>
                                    {{ lot.name }}
                                </td>
                                <td>
                                    {% if lot.externalLotId %}
                                        <code>{{ lot.externalLotId }}</code>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if lot.campaignId %}
                                        Campaign #{{ lot.campaignId }}
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if lot.status == 'CREATING' %}
                                        <span class="label label-info">{{ 'mautic.bpmessage.lot.status.creating'|trans }}</span>
                                    {% elseif lot.status == 'OPEN' %}
                                        <span class="label label-warning">{{ 'mautic.bpmessage.lot.status.open'|trans }}</span>
                                    {% elseif lot.status == 'FINISHED' %}
                                        <span class="label label-success">{{ 'mautic.bpmessage.lot.status.finished'|trans }}</span>
                                    {% elseif lot.status == 'FAILED' %}
                                        <span class="label label-danger">{{ 'mautic.bpmessage.lot.status.failed'|trans }}</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge badge-default">{{ stats.total }}</span>
                                    {% if stats.pending > 0 %}
                                        <span class="badge badge-warning" title="Pending">{{ stats.pending }}</span>
                                    {% endif %}
                                    {% if stats.sent > 0 %}
                                        <span class="badge badge-success" title="Sent">{{ stats.sent }}</span>
                                    {% endif %}
                                    {% if stats.failed > 0 %}
                                        <span class="badge badge-danger" title="Failed">{{ stats.failed }}</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span title="{{ lot.createdAt|date('Y-m-d H:i:s') }}">
                                        {{ lot.createdAt|date('Y-m-d H:i') }}
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="{{ path('mautic_bpmessage_lot_view', {'id': lot.id}) }}"
                                           class="btn btn-default btn-xs"
                                           data-toggle="ajax"
                                           title="{{ 'mautic.core.form.view'|trans }}">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                        {% if lot.status in ['FAILED', 'FINISHED'] and stats.failed > 0 %}
                                            <a href="{{ path('mautic_bpmessage_lot_reprocess', {'id': lot.id}) }}"
                                               class="btn btn-warning btn-xs"
                                               data-toggle="ajax"
                                               data-method="POST"
                                               title="{{ 'mautic.bpmessage.lot.reprocess'|trans }}">
                                                <i class="fa fa-refresh"></i>
                                            </a>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            {# Pagination #}
            {% if totalPages > 1 %}
                <div class="text-center">
                    <ul class="pagination">
                        {% if page > 1 %}
                            <li>
                                <a href="{{ path('mautic_bpmessage_lot_index', {'page': page - 1}) }}" data-toggle="ajax">
                                    <i class="fa fa-angle-left"></i>
                                </a>
                            </li>
                        {% endif %}

                        {% for p in 1..totalPages %}
                            <li {% if p == page %}class="active"{% endif %}>
                                <a href="{{ path('mautic_bpmessage_lot_index', {'page': p}) }}" data-toggle="ajax">
                                    {{ p }}
                                </a>
                            </li>
                        {% endfor %}

                        {% if page < totalPages %}
                            <li>
                                <a href="{{ path('mautic_bpmessage_lot_index', {'page': page + 1}) }}" data-toggle="ajax">
                                    <i class="fa fa-angle-right"></i>
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            {% endif %}
        {% endif %}
    </div>
</div>
{% endblock %}
